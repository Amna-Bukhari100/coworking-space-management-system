@model CoWorkManager.Models.Workspace
@{
    ViewData["Title"] = "Add Workspace";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h3 class="mb-4">Add New Workspace</h3>
                <form asp-action="AddWorkspace" method="post">
                    <div class="mb-3">
                        <label class="form-label">Workspace Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Desk A1" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Type</label>
                        <select asp-for="Type" class="form-select">
                            <option value="Desk">Desk</option>
                            <option value="Meeting Room">Meeting Room</option>
                            <option value="Booth">Booth</option>
                            <option value="Office">Office</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price Per Hour ($)</label>
                        <input asp-for="PricePerHour" type="number" step="0.01" class="form-control" required />
                    </div>
                    <div class="form-check mb-4">
                        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" checked />
                        <label class="form-check-label">Available for Booking</label>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-main">Create Workspace</button>
                        <a asp-action="ManageWorkspaces" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>