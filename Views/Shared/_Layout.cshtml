@using System
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Synapse</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        a {
            color: #cf6d2b;
        }

        .btn-main {
            background-color: #cf6d2b;
            color: white;
            border: none;
        }

        .btn-main:hover {
            background-color: #b55d24;
            color: white;
        }

        .summary-card h3 {
            color: #cf6d2b;
            font-weight: bold;
        }

        .status-pending {
            background-color: #ffc107;
            color: #000;
        }

        .status-confirmed {
            background-color: #198754;
            color: #fff;
        }

        .status-rejected,
        .status-cancelled {
            background-color: #dc3545 !important;
            color: #fff !important;
            font-weight: bold;
        }

        /* General badge polish */
        .badge {
            padding: 0.5em 0.8em;
            border-radius: 0.5rem;
            display: inline-block;
        }

        /* Notification Toast Styles */
        #notificationToast {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
        }
        
        .toast-header {
            background-color: #cf6d2b;
            color: white;
        }
        
        .toast-header .btn-close {
            filter: invert(1);
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Notification Toast Container -->
    <div id="notificationToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">📣 THE SYNAPSE NOTIFICATION</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="notificationMessage">
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-light">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="Logo" class="logo me-2" />
                <span>The Synapse</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Bookings">Bookings</a>
                            </li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin"
                                    asp-action="ManageWorkspaces">Workspaces</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Visitors">Guest Log</a>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="MyBookings">My
                                    Bookings</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="VisitorLog">My Guests</a>
                            </li>
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="CreateBooking">Book
                                    Now</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Profile">Profile</a></li>
                        }

                        <li class="nav-item ms-3">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-light btn-sm">Logout
                                    (@User.Identity.Name)</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @if (IsSectionDefined("HeaderStats"))
        {
            <div class="row g-3 mb-4">
                @await RenderSectionAsync("HeaderStats", required: false)
            </div>
        }

        <main role="main" class="flex-grow-1 pb-3 my-5">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light text-center py-3 mt-auto">
        &copy; @DateTime.Now.Year The Synapse. All rights reserved.
    </footer>

    @* SCRIPTS SECTION *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @* SignalR Client Library *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>

    <script>
       
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/bookingHub")
            .withAutomaticReconnect()
            .build();

        const notificationToast = new bootstrap.Toast(document.getElementById('notificationToast'));
        
     
        connection.on("ShowNotification", function (message) {
    
            document.getElementById('notificationMessage').textContent = message;
            notificationToast.show();
          
            if (message.toLowerCase().includes("confirmed") || 
                message.toLowerCase().includes("cancelled")) {
                setTimeout(() => {
                    if (!document.querySelector('form:focus-within')) {
                        location.reload();
                    }
                }, 2000);
            }
        });

        // Start the connection
        connection.start()
            .then(() => {
                console.log("✅ SignalR Connected");
            })
            .catch(err => console.error("❌ SignalR Error:", err));
    </script>

    @* Sub-views will inject their logic here *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>