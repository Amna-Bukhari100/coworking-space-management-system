@model int

@if (Model > 0)
{
    @* SHOW THIS WHEN WORK IS PENDING *@
    <div class="alert alert-warning border-0 shadow-sm d-flex justify-content-between align-items-center mb-4">
        <div>
            <i class="fas fa-exclamation-circle me-2"></i>
            <strong>Action Required:</strong> You have <span>@Model</span> pending booking requests.
        </div>
        <a href="#bookingsTable" class="btn btn-sm btn-warning fw-bold text-uppercase" style="font-size: 0.75rem;">Review Now</a>
    </div>
}
else
{
    @* SHOW THIS WHEN COUNT IS ZERO *@
    <div class="alert alert-success border-0 shadow-sm mb-4">
        <i class="fas fa-check-circle me-2"></i>
        <strong>All caught up!</strong> No bookings are currently pending approval.
    </div>
}